<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<android.support.v7.widget.CardView
    android:id="@+id/cardview_recive_messsage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:visibility="gone"
    app:cardCornerRadius="@dimen/_5sdp">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:paddingBottom="@dimen/_8sdp"
       android:paddingRight="@dimen/_5sdp"
       android:paddingLeft="@dimen/_5sdp"
       android:orientation="vertical">
    <TextView
        android:id="@+id/textview_msg_recive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hi"
        android:textSize="@dimen/_14sdp"
        android:visibility="visible"/>
       <TextView
           android:id="@+id/textview_recive_time"
           android:layout_gravity="right"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/_7sdp"
           android:layout_marginLeft="@dimen/_5sdp"
           android:layout_toRightOf="@id/textview_msg_recive"
           android:layout_alignBottom="@id/textview_msg_recive"
           android:text="12:11 Pm"/>
   </RelativeLayout>
</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_send_messsage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:visibility="gone"
        android:layout_gravity="right"
        app:cardCornerRadius="@dimen/_5sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/_3sdp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:background="#b8bdf988">
            <TextView
                android:id="@+id/textview_msg_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hi"
                android:textSize="@dimen/_14sdp"
                android:visibility="visible"
                android:layout_marginBottom="@dimen/_5sdp"/>
            <TextView
                android:id="@+id/textview_send_time"
                android:layout_gravity="right|bottom"
                android:layout_toRightOf="@+id/textview_msg_send"
                android:layout_alignBottom="@id/textview_msg_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_7sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="12:11 Pm"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
</layout>