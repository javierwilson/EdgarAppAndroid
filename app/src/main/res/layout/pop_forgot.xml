<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/rLContOnlySingle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_pop"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:visibility="visible">


        <org.lwr.edgar.view.TextViewBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:lineSpacingExtra="7sp"
            android:text="Ingrese Correo"
            android:textColor="#000"
            android:textSize="20sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/etEmaillayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlToolbar"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="#000"
            android:theme="@style/TextInputLayoutAppearance"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#000">

            <org.lwr.edgar.view.EditTextRegular
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#000" />

        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_pop"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:visibility="visible"
            android:weightSum="2">


            <org.lwr.edgar.view.ButtonBold
                android:id="@+id/btCancelar"
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:layout_above="@+id/txLine"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_cancel"
                android:gravity="center"
                android:text="Cancelar"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <org.lwr.edgar.view.ButtonBold
                android:id="@+id/btAceptar"
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:layout_above="@+id/txLine"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:gravity="center"
                android:text="Aceptar"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
